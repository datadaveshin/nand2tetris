/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP XorDef {
    IN a, b;
    OUT out;

    PARTS:
    Not(in=a,out=NotAOut);
    Not(in=b,out=NotBOut);
    And(a=NotAOut, b=b, out=AndOutA);
    And(b=NoBAOut, a=a, out=AndOutB);
    Or(a=AndOutA, b=AndOutB, out=out);
}
